<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/heart_rate_scanner_text"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/linkTextColor"
            android:id="@+id/heart_rate_scanner"
            android:clickable="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tabata_data"
        android:layout_below="@+id/heart_rate_scanner">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Prep"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/prep_time"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="number"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Work"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/work_time"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="number"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rest"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/rest_time"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:inputType="number"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reps"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/num_of_reps"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="number"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tabata_data">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Heart Rate Zones:"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="2"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/high_intensity_spinner"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>
        <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/low_intensity_spinner"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="120sp"
        android:layout_below="@+id/tabata_data"
        android:gravity="center"
        android:id="@+id/activity_text"
        android:text="N/A"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:id="@+id/start_button"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finish"
            android:id="@+id/finish_button"
            android:layout_weight="1"/>
    </LinearLayout>

</RelativeLayout>